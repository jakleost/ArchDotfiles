(defpoll time :interval "1s"
  "date '+%H:%M:%S'")

(defwidget desktop-clock []
  (box :halign "end"
       :valign "end"
       :style "padding: 10px; background: rgba(0,0,0,0.3); border-radius: 10px;"
       (label :text time
              :style "font-size: 36px; color: white; font-weight: bold;")))

